{
  "compileOnSave": true,
  "compilerOptions": {
    "importHelpers": true,
    "module": "esnext",
    "esModuleInterop": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "es2019"
    ],
    "types": [
    ],
    "useDefineForClassFields": false
  },
  "exclude": ["node_modules"],
  "angularCompilerOptions": {
    "allowSyntheticDefaultImports": true
  }
}
